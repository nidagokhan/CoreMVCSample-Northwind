@model Northwind.UI.DatabaseApp.Entities.Shipper

@{
    ViewData["Title"] = "Edit Shipper";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="ShipperID" class="control-label"></label>
        <input asp-for="ShipperID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CompanyName" class="control-label"></label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aktifmi" class="control-label"></label>
        <input asp-for="Aktifmi" class="form-control" />
        <span asp-validation-for="Aktifmi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
